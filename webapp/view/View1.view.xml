<mvc:View controllerName="ovly.odata.fornecedores.controller.View1" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
	<App id="app">
		<pages>
			<Page id="page" title="{i18n>title}">
				<content>
					<List items="{/Suppliers}" itemPress="onItemPress"> <!--"Não tem prefixo {xpto>xxxxx} porque é o default-->
						<items>
							<!--<StandardListItem title="{ID}" description="{Name}" info="{Concurrency}" />-->
							<ObjectListItem 
							    intro="{ID}" 
							    title="{Name}" 
							    number="{Concurrency}" 
							    numberUnit="Concurrency" 
							    type="DetailAndActive">
								<attributes>
									<ObjectAttribute title="City" text="{Address/City}"/>
									<ObjectAttribute title="Country" text="{Address/Country}"/>
								</attributes>
								<firstStatus>
									<ObjectStatus title="Zip Code" text="{Address/ZipCode}" />
								</firstStatus>
						    </ObjectListItem>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>